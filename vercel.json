{
  "version": 2,
  "builds": [
    {
      "src": "source/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "source/$1"
    }
  ],
  "buildCommand": "cd source && npm install && npm run build",
  "installCommand": "cd source && npm install",
  "outputDirectory": "source/.next",
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgresql://user:password@your-postgres-host:5432/attendance_system"
  }
}
